<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Movie Discussion Forum</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .navbar { background: rgba(255,255,255,0.95) !important; backdrop-filter: blur(10px); }
        .container { margin-top: 20px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">🎬 Movie Discussion Forum</a>
            <div class="navbar-nav ms-auto">
                @if (Request.IsAuthenticated)
                {
                    <a class="nav-link" href="@Url.Action("Index", "Discussion")">🎬 Diskusije</a>
                    <a class="nav-link" href="@Url.Action("Create", "Discussion")">➕ Nova diskusija</a>
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            👤 @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">👤 Moj profil</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("EditProfile", "Account")">✏️ Izmeni profil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">🚪 Odjava</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="nav-link" href="@Url.Action("Index", "Discussion")">🎬 Diskusije</a>
                    <a class="nav-link" href="@Url.Action("Login", "Account")">🔐 Prijava</a>
                    <a class="nav-link" href="@Url.Action("Register", "Account")">📝 Registracija</a>
                }
            </div>
        </div>
    </nav>

    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>