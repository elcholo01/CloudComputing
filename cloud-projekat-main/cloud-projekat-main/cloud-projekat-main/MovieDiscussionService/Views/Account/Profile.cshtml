@{
    ViewBag.Title = "Profil korisnika";
}

<div class="container" style="margin-top: 30px;">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg" style="border-radius: 15px;">
                <div class="card-header text-center" style="background: linear-gradient(45deg, #007bff, #0056b3); color: white; border-radius: 15px 15px 0 0;">
                    <h3>üë§ Profil korisnika</h3>
                    <small>@ViewBag.UserEmail</small>
                </div>
                <div class="card-body" style="padding: 30px;">
                    
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Gre≈°ka:</strong> @ViewBag.Error
                        </div>
                    }

                    @if (ViewBag.FullName != null)
                    {
                        <div class="row">
                            <div class="col-md-3 text-center">
                                @if (!string.IsNullOrEmpty(ViewBag.PhotoUrl))
                                {
                                    <img src="@ViewBag.PhotoUrl" alt="Profilna slika" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #007bff;">
                                }
                                else
                                {
                                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px; margin: 0 auto;">
                                        <i class="fas fa-user fa-4x text-white"></i>
                                    </div>
                                }
                                
                                @if (ViewBag.IsAuthorVerified == true)
                                {
                                    <div class="alert alert-success p-2">
                                        <i class="fas fa-check-circle"></i> <strong>Verifikovan autor</strong>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning p-2">
                                        <i class="fas fa-clock"></i> <strong>ƒåeka verifikaciju</strong>
                                    </div>
                                }
                            </div>
                            <div class="col-md-9">
                                <h4>@ViewBag.FullName</h4>
                                
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Email:</label>
                                            <p class="form-control-plaintext">@ViewBag.UserEmail</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Pol:</label>
                                            <p class="form-control-plaintext">@ViewBag.Gender</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Dr≈æava:</label>
                                            <p class="form-control-plaintext">@ViewBag.Country</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Grad:</label>
                                            <p class="form-control-plaintext">@ViewBag.City</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Adresa:</label>
                                            <p class="form-control-plaintext">@ViewBag.Address</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Status:</label>
                                            <p class="form-control-plaintext">
                                                @if (ViewBag.IsAuthorVerified == true)
                                                {
                                                    <span class="badge bg-success">Verifikovan autor</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Obiƒçni korisnik</span>
                                                }
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="alert alert-info">
                                    <strong>üìä Izvor podataka:</strong> @ViewBag.DataSource
                                </div>

                                @if (ViewBag.IsAuthorVerified != true)
                                {
                                    <div class="alert alert-info">
                                        <strong>üí° Napomena:</strong> Da biste mogli da kreirate diskusije, potrebno je da budete verifikovani kao autor preko AdminToolsConsoleApp aplikacije.
                                    </div>
                                }
                            </div>
                        </div>
                        
                        <hr />
                        
                        <div class="text-center">
                            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary btn-lg me-3" style="border-radius: 25px; padding: 12px 30px;">
                                ‚úèÔ∏è Izmeni profil
                            </a>
                            <a href="@Url.Action("Index", "Discussion")" class="btn btn-success btn-lg" style="border-radius: 25px; padding: 12px 30px;">
                                üé¨ Diskusije o filmovima
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <h5>Profil nije pronaƒëen</h5>
                            <p>Podaci o profilu nisu dostupni iz Azure Storage.</p>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Nazad na poƒçetnu</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn:hover { 
        transform: translateY(-1px);
        transition: all 0.3s;
    }
    .card-body {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
</style>