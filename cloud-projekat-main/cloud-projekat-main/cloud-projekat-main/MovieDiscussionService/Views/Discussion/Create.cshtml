@model MovieDiscussionService.Controllers.CreateDiscussionViewModel
@{
    ViewBag.Title = "Nova diskusija";
}

<div class="container" style="margin-top: 30px;">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg" style="border-radius: 15px;">
                <div class="card-header text-center" style="background: linear-gradient(45deg, #007bff, #0056b3); color: white; border-radius: 15px 15px 0 0;">
                    <h3>🎬 Kreiranje nove diskusije o filmu</h3>
                    <small>Samo verifikovani autori mogu kreirati diskusije</small>
                </div>
                <div class="card-body" style="padding: 30px;">
                    @using (Html.BeginForm("Create", "Discussion", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Title, new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "npr. Oppenheimer - Nolan-ov remek delo" })
                                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Year, new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.Year, new { @class = "form-control", @placeholder = "2023", @type = "number" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.ImdbRating, new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.ImdbRating, new { @class = "form-control", @placeholder = "8.5", @step = "0.1", @type = "number" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Genre, new { @class = "form-label fw-bold" })
                                    @Html.DropDownListFor(m => m.Genre, new SelectList(new[] { 
                                        "Akcija", "Komedija", "Drama", "Horor", "Naučna fantastika", 
                                        "Romantični", "Triler", "Animirani", "Dokumentarni", "Biografski", "Istorijski", "Ostalo" 
                                    }), "-- Izaberite žanr --", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Duration, new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", @placeholder = "180", @type = "number" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.ImageUrl, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", @placeholder = "https://example.com/poster.jpg" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.Content, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "8", @placeholder = "Opišite film, podelite svoje mišljenje, postavite pitanja za diskusiju...\n\nPrimer:\n- Kakvo je vaše mišljenje o ovom filmu?\n- Da li preporučujete gledanje?\n- Najbolje scene?\n- Ocena glume i režije?" })
                            @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                        </div>

                        <div class="alert alert-info">
                            <strong>💡 Saveti za dobru diskusiju:</strong>
                            <ul class="mb-0">
                                <li>Opišite zašto vam se film dopao ili nije</li>
                                <li>Postavite pitanja koja će pokrenuti diskusiju</li>
                                <li>Izbegavajte spojlere ili ih jasno označite</li>
                                <li>Budite konstruktivni u kritikama</li>
                            </ul>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg me-3" style="border-radius: 25px; padding: 12px 30px;">
                                🚀 Kreiraj diskusiju
                            </button>
                            <a href="@Url.Action("Index", "Discussion")" class="btn btn-secondary btn-lg" style="border-radius: 25px; padding: 12px 30px;">
                                ❌ Otkaži
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus { 
        border-color: #007bff; 
        box-shadow: 0 0 5px rgba(0,123,255,0.3); 
    }
    .btn-success:hover { 
        background-color: #218838; 
        transform: translateY(-1px);
        transition: all 0.3s;
    }
</style>